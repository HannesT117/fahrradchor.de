{
	"plansDirectory": "./plans",
	"allowedMcpServers": [{ "serverName": "github" }],
	"permissions": {
		"allow": [
			"Bash(pnpm run lint)",
			"Bash(pnpm run test*)",
			"Bash(pnpm run build*)",
			"Bash(pnpm run dev*)",
			"Bash(git status*)",
			"Bash(git diff*)"
		],
		"deny": ["Bash(curl:*)", "Read(./.env)", "Read(./.env.*)"]
	},
	"env": {
		"CLAUDE_CODE_ENABLE_TELEMETRY": "0"
	}
}
